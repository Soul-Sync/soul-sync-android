<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pinkmuda">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/pinkmuda"
        android:paddingHorizontal="16dp">

        <!-- Tombol kembali -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:contentDescription="@string/back_button_desc"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:focusable="true" />

        <!-- Judul -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/result"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- CardView untuk konten -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_marginTop="1dp"
        app:cardCornerRadius="30dp"
        android:background="@color/white"
        app:cardElevation="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card">

                <!-- Status Section -->
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:drawablePadding="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/pinkmuda"
                    android:layout_marginVertical="12dp" />

                <!-- Music Recommendations -->
                <TextView
                    android:id="@+id/tvMusicList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Music Recommendations:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvMusicRecommendations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Music list will be displayed here."
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="12dp" />

                <!-- Therapy Recommendations -->
                <TextView
                    android:id="@+id/tvTherapyList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Therapy Recommendations:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvTherapyRecommendations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Therapy list will be displayed here."
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>
</RelativeLayout>